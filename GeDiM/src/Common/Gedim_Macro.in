#ifndef __GEDIM_MACRO_H
#define __GEDIM_MACRO_H

/// Enable Triangle
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_TRIANGLE

/// Enable Tetgen
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_TETGEN

/// Enable VTK
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_VTK

/// Enable MKL
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_MKL

/// Enable Metis
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_METIS

/// Enable VORO++
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_VORO

/// Enable SUITESPARSE
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_SUITESPARSE

/// Enable PETSc
/// - 0 false
/// - 1 true
#cmakedefine01 ENABLE_PETSC

/// Use MPI
/// - 0 false
/// - 1 true
#cmakedefine01 USE_MPI

/// Verbose Levels
/// - 0 None
/// - 1 Error
/// - 2 Warning
/// - 3 Info
/// - 4 Debug
#cmakedefine VERBOSE @VERBOSE@

/// Logging Levels
/// - 0 None
/// - 1 Only Console
/// - 2 Only Files
/// - 3 Console and Files
#cmakedefine LOGGING @LOGGING@

// the configured options and settings for Tutorial
#define GEDIM_VERSION_MAJOR @GeDiM_VERSION_MAJOR@
#define GEDIM_VERSION_MINOR @GeDiM_VERSION_MINOR@

/// @name Code Simplifications
///@{
#ifndef MIN
#define MIN(a,b) (a < b) ? a : b
#endif

#ifndef MAX
#define MAX(a,b) (a > b) ? a : b
#endif

///@}

#endif
